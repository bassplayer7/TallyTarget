<section class="wrapper style2 container special-alt">
    <div class="row 50%">
        <div>
            <header>
                <h2>{{ page.header.title }}</h2>
            </header>
            {{ content }}
            <footer class="clearfix">
                <ul class="buttons">
                    {% for button in page.header.buttons %}
                        <li><a href="{{ button.url }}" class="button">{{ button.text }}</a></li>
                    {% endfor %}
                </ul>
            </footer>
        </div>
    </div>
</section>